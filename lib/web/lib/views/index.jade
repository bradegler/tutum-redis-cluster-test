doctype html
html(lang='en')
  head

    meta(
      charset='UTF-8'
    )
    meta(
      http-equiv='X-UA-Compatible'
      content='IE=edge, chrome=1'
    )
    meta(
      name='viewport'
      content='initial-scale=1.0, maximum-scale=1.0, user-scalable=no, width=device-width'
    )
    meta(
      name='description'
      content=''
    )

    title Redis Cluster Demo

    link(
      href='/bootstrap.css'
      rel='stylesheet'
      media='screen'
    )
    link(
      href='/public.css'
      rel='stylesheet'
      media='screen'
    )

  body

    .container

      form(
        action=''
        method='POST'
        role='form'
      ) 
        input.form-control(
          name='value'
          type='text'
          placeholder='value'
        )
        button.btn.btn-default(
          type='submit'
          hidden
        )

      ul
        for item in items
          li
            a(href='/completed/#{item.key}')
              | #{item}
